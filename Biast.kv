#:import Factory kivy.factory

<Label>:
    color: (0,0,0,1)
    font_name: 'data/Roboto-Regular.ttf'

<LoadingImage@Image>:

<DrinkFoundButton@Button>:
    size_hint_y: None
    height: dp(50)
    on_release: app.root.enterDrink(root.drink_id)

<DrinkCard@BoxLayout>:
    drink_name: 'Placeholder Name'
    drink_description:'Placeholder Description'
    drink_id:''
    drink_image: ''
    orientation:'vertical'
    size_hint: (0.8,1)
    pos_hint: {'right':0.9}
    Button:
        on_release: app.root.enterDrink(root.drink_id)
        background_normal: root.drink_image
    Label:
        id:'DrinkNameCard'
        size_hint:(1, 0.1)
        text: root.drink_name
        font_name: 'data/Roboto-Medium.ttf'
    Separator:
    Label:
        id:'DrinkDescriptionCard'
        size_hint:(1, 0.1)
        text: root.drink_description

<Separator@Widget>:
    size_hint_y: None
    height: dp(1)
    color: 0, 0, 0, 1
    background_image: ''

    canvas:
        Color:
            rgba: root.color
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background_image

<ErrorPopup@Popup>
    errorText: 'Oops, Something went wrong!'
    size_hint: 0.5,0.5
    title: 'Error'
    auto_dismiss:True
    Label:
        text: root.errorText

<TitleBar@BoxLayout>
    text: ''
    canvas.before:
        Color:
            rgba: 1, 0.76, 0.02, 1
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    id: 'title_bar'
    size_hint: (1,None)
    size: (1,60)
    spacing: dp(10)
    padding: dp(5)
    Button:
        size_hint:(None,1)
        width: dp(50)
        on_release: app.root.current = 'Search_screen'
        background_normal: 'data/UI/search.png'
    Button:
        size_hint:(None,1)
        width: dp(50)
        background_normal: 'data/UI/arrow_back.png'
        on_release: app.root.backScreen()
    Label:
        id: title_bar_text
        font_name: 'data/Roboto-Medium.ttf'
        font_size: dp(25)
        text: root.text
        color: (1,1,1,1)
    Button:
        size_hint:(None,1)
        width: dp(50)
        on_release: app.root.current = 'Settings_screen'
        background_normal: 'data/UI/settings.png'


<EmptyScreen>:
    text: self.title_text
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                # self here refers to the widget i.e BoxLayout
                pos: self.pos
                size: self.size
        id:total_box
        orientation: 'vertical'
        TitleBar:
            text: root.text
        BoxLayout:
            id:mainArea

<FavouritesScreen>:
    name: 'Favourites_screen'
    title_text: 'Favourites'
    Carousel:
        direction: 'right'
        id: favs_carousel
        size_hint: (1,0.9)
        loop: 'True'

        DrinkCard:
            drink_name: 'Favourite No.1'
            drink_description: 'The first Favourite'
            drink_id: 'ginandtonic'

        DrinkCard:
            drink_name: 'Favourite No 2'
            drink_description: 'The second favourite'
            drink_id: 'rumandcoke'

<SearchScreen>:
    name: 'Search_screen'
    title_text: 'Search'
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.9
        TextInput:
            size_hint_y: None
            height: dp(50)
            text: ''
            on_text: app.root.search(self.text)
        ScrollView:
            BoxLayout:
                size_hint_y: None
                height:(len(self.children) * 50)
                orientation: 'vertical'
                id: search_results


<SettingsScreen>:
    name: 'Settings_screen'
    title_text: 'Settings'
    BoxLayout:
        size_hint:(1,0.9)
        orientation:'horizontal'
        BoxLayout:
            padding: dp(10)
            spacing: dp(5)
            orientation: 'vertical'
            Button:
                text: 'Drink Manager'
                on_release: app.root.current = 'drink_manager'
            Separator:
            Button:
                text: 'Network Manager'
            Separator:
            Button:
                text: 'About'
        BoxLayout:
            padding: dp(10)
            spacing: dp(5)
            orientation: 'vertical'
            Button:
                text: 'B.I.A.S.T. Setup'
            Separator:
            Button:
                text: 'To Be Added'
            Separator:
            Button:
                text: 'Statistics'


<DrinkScreen>
    name: 'drink_screen'
    title_text: 'Drink Name'
    drink_id: 'Drink_id'
    BoxLayout:
        size_hint: (1,0.9)
        orientation: 'horizontal'
        BoxLayout:
            size_hint:(0.78,1)
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(30)
            Image:
                id: drink_image
                source: 'data/Drinks/rumAndCoke.png'
            Button:
                size_hint: (1,0.2)
                color: (24.7, 31.8, 71)
                text: 'Make this drink'
                on_release: app.root.make_drink(root.drink_id)
            Label:
                size_hint: (1,0.08)
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: 0.9
                pos_hint: {'y':0.8}
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        size_hint_y: None
                        height: dp(40)
                        text: 'Spirits'
                        font_name: 'data/Roboto-Medium.ttf'
                    BoxLayout:
                        id: drink_spirit_list
                        orientation: 'vertical'

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        size_hint_y: None
                        height: dp(40)
                        text: 'Mixers'
                        font_name: 'data/Roboto-Medium.ttf'
                    BoxLayout:
                        id: drink_mixer_list
                        orientation: 'vertical'

            Separator:
                height: dp(2)
            ScrollView:
                Label:
                    id: drink_description_id
                    text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: 'left'
                    valign: 'top'

<DrinkBox@BoxLayout>:
    parts: 0
    ingredient_name: drink_input_ingredient_name.text
    size_hint_y: None
    height: dp(30)
    padding: dp(5),0
    spacing: dp(5)
    Label:
        text: 'Ingredient Name:'
        size_hint_x: None
        width: dp(140)
    TextInput:
        id: drink_input_ingredient_name
    Label:
        size_hint_x: None
        width: dp(60)
    Button:
        size_hint_x: None
        width: dp(50)
        text:'-'
        on_release: if root.parts > 0: root.parts -= 1
    Label:
        text: 'No. of Parts: ' + str(root.parts)
        size_hint_x: None
        width: dp(140)
    Button:
        size_hint_x: None
        width: dp(50)
        text:'+'
        on_release: root.parts = root.parts + 1


<SettingsScreen_DrinkManger>:
    title_text: 'Drink Manager'
    id: drink_manager_id
    name: 'drink_manager'
    BoxLayout:
        size_hint: (1,0.9)
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(5)
                padding: dp(5),0
                Label:
                    halign: 'left'
                    size_hint_y: None
                    height: dp(30)
                    text: 'Drink Name'
                TextInput:
                    id: drink_name_input
                    size_hint_y: None
                    height: dp(30)
                Separator:
                Label:
                    halign: 'left'
                    size_hint_y: None
                    height: dp(30)
                    text: 'Drink Description'
                TextInput:
                    id: drink_description_input
                    size_hint_y: None
                    height: dp(30)
                Separator:
                Label:
                    halign: 'left'
                    size_hint_y: None
                    height: dp(30)
                    text: 'Drink Recipe'
                ScrollView:
                    BoxLayout:
                        size_hint_y: None
                        height:(len(self.children) * 35)
                        id: drink_recipe_input
                        orientation: 'vertical'
                        spacing: dp(5)
                        DrinkBox:
                            pos_hint: {'top':0}

                BoxLayout:
                    size_hint_y: None
                    height: dp(30)
                    padding: dp(5),0
                    orientation: 'vertical'
                    Label:
                        size_hint_y: None
                        height: dp(5)
                    BoxLayout:
                        spacing: dp(60)
                        padding: dp(40),0
                        Button:
                            text: 'Remove last ingredient'
                            on_release: root.remove_drink_box()
                            size_hint_x: 0.4
                        Button:
                            text: 'Add new ingredient'
                            on_release: root.add_drink_box()
                            size_hint_x: 0.4
                Separator:
                Label:
                    halign: 'left'
                    size_hint_y: None
                    height: dp(30)
                    text: 'Drink Image filepath'
                TextInput:
                    id: drink_image_input
                    size_hint_y: None
                    height: dp(30)
                Separator:
                BoxLayout:
                    size_hint_y: None
                    height: dp(60)
                    padding: dp(10)
                    spacing: dp(70)
                    Button:
                        text: 'Cancel'
                        on_release: app.root.current = 'Settings_screen'
                    Button:
                        text: 'Add Drink'
                        on_release: root.add_drink(root.ids.drink_name_input.text , root.ids.drink_description_input.text , root.ids.drink_recipe_input.children , root.ids.drink_image_input.text)


<Screens>
    FavouritesScreen:
        id: favourites_screen_id
    SearchScreen:
        id: search_screen_id
    SettingsScreen:
        id: setting_screen_id
    DrinkScreen:
        id: drink_screen_id
    SettingsScreen_DrinkManger:
        id: drink_manager_id