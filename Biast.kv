<DrinkCard@BoxLayout>:
    orientation:'vertical'
    size_hint: (0.8,1)
    pos_hint: {'right':0.9}
    Button:
        text: 'Placeholder for a drink'
        on_press: app.root.enterDrink()
        font_name: 'data/Roboto-Regular.ttf'
    Label:
        id:'DrinkNameCard'
        size_hint:(1, 0.1)
        text: 'Placeholder'
        font_name: 'data/Roboto-Regular.ttf'
    Label:
        id:'DrinkDescriptionCard'
        size_hint:(1, 0.1)
        text: 'Placeholder Description'
        font_name: 'data/Roboto-Regular.ttf'

<TitleBar@BoxLayout>
    canvas.before:
        Color:
            rgba: 1, 0.76, 0.02, 1
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    id: 'title_bar'
    size_hint: (1,None)
    size: (1,60)
    spacing: 10
    padding: 5
    Button:
        size_hint:(None,None)
        width: 50
        text: 'Search button'
        on_release: app.root.current = 'Search_screen'
    Button:
        size_hint:(None,None)
        width: 50
        text: 'Back Button'
        background_normal: 'data/UI/arrow_back.png'
        on_release: app.root.backScreen()
    Label:
        id: 'title_bar_text'
        font_name: 'data/Roboto-Medium.ttf'
        font_size: 25
        text: 'Placeholder Title'
    Button:
        size_hint:(None,None)
        width: 50
        text: 'settings button'
        on_release: app.root.current = 'Settings_screen'


<FavouritesCarousel@Carousel>:
    direction: 'right'
    id: 'favs_carousel'
    size_hint: (1, 0.6)
    pos_hint: {'y': 0.2}
    loop: 'True'

    DrinkCard:
        text: 'Favourite No.1'

    DrinkCard:
        text: 'Favourite No 2'

<EmptyScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                # self here refers to the widget i.e BoxLayout
                pos: self.pos
                size: self.size
        id:'total_box'
        orientation: 'vertical'
        TitleBar:
        BoxLayout:
            id:'mainArea'

<FavouritesScreen>:
    name: 'Favourites_screen'
    FavouritesCarousel:

<SearchScreen>:
    name: 'Search_screen'

<SettingsScreen>:
    name: 'Settings_screen'

<Screens>

    FavouritesScreen:
    SearchScreen:
    SettingsScreen: